/* 互动区 */
.av-inte-box {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  font-size: 14px;
  color: #707070;
  border-top: 2rpx solid #f2f2f2;
}

.av-inte-icon {
  box-sizing: border-box;
  width: 45rpx;
  height: 45rpx;
  padding: 6rpx;
  border-radius: 50%;
  border: 2rpx solid #707070;
  margin-right: 50rpx;
  vertical-align: middle;
  margin-top: -5rpx;
}

.av-inte:last-child .av-inte-icon {
  border-radius: 0;
  border: none;
  padding: 4rpx;
  margin-right: 0;
}
